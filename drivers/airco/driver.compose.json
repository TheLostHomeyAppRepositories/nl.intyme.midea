{
  "name": {
    "en": "Airconditioning",
    "nl": "Airconditioning"
  },
  "class": "thermostat",
  "capabilities": [
    "onoff",
    "thermostat_mode",
    "target_temperature",
    "measure_temperature",
    "measure_temperature.outside",
    "thermostat_boost",
    "thermostat_fan_speed",
    "thermostat_swing_mode",
    "thermostat_eco",
    "thermostat_freeze_protection"
  ],
  "capabilitiesOptions": {
    "target_temperature": {
      "min": 16,
      "max": 30,
      "step": 1
    },
    "measure_temperature": {
      "title": {
        "en": "Inside temperature",
        "nl": "Binnentemperatuur"
      }
    },
    "measure_temperature.outside": {
      "title": {
        "en": "Outside temperature",
        "nl": "Buitentemperatuur"
      }
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": true
      },
      "navigation": {
        "next": "login_credentials"
      }
    },
    {
      "id": "login_credentials",
      "options": {
        "logo": "{{driverAssetsPath}}/icon.svg",
        "title": {
          "en": "Log in with your credentials",
          "nl": "Meld u aan met uw inloggegevens"
        },
        "usernameLabel": {
          "en": "E-mail address",
          "nl": "E-mailadres"
        },
        "usernamePlaceholder": {
          "en": "john@doe.com",
          "nl": "gebruiker@domein.com"
        },
        "passwordLabel": {
          "en": "Password",
          "nl": "Wachtwoord"
        },
        "passwordPlaceholder": {
          "en": "Password",
          "nl": "Wachtwoord"
        }
      },
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/driver-small.png",
    "large": "{{driverAssetsPath}}/images/driver-large.png",
    "xlarge": "{{driverAssetsPath}}/images/driver-xlarge.png"
  }
}